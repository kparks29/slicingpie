<% if @current_user %>
  <h1>Welcome <%= @current_user.name %></h1>
  <% if @current_user.companies != [] %>
    Here are your companies:
    <ul>
      <% @current_user.companies.each do |company| %>
        <li><%= link_to company.name, company %></li>
      <% end %>
    </ul>
    <%= link_to "Create another Company", new_company_path %>
  <% else %>
    <%= link_to "Create a Company", new_company_path %>
  <% end %>
<% else %>
  <h1>Welcome to Slicing Pie App</h1>
  <%= link_to "Get Started", new_user_path %>

<% end %>