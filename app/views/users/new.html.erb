<div class="container">
  <div class="col-md-6">
    <h2>Sign Up</h2>
    <%= form_for @user do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %><br>
      <%= f.label :email %>
      <%= f.text_field :email %><br>
      <%= f.label :password %>
      <%= f.password_field :password %><br>
      <%= f.label :confirm_password %>
      <%= f.password_field :confirm_password %><br>

      <%= f.submit %>

    <% end %>
  </div>
  <div class="col-md-6">
    <h4>Already have an account?</h4>
    <h2>Login</h2>
    <%= form_for @user, url: {controller: "auths", action: "create"} do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %><br>
      <%= f.label :email %>
      <%= f.text_field :email %><br>
      <%= f.label :password %>
      <%= f.password_field :password %><br>
      <%= f.label :confirm_password %>
      <%= f.password_field :confirm_password %><br>

      <%= f.submit %>

    <% end %>
  </div>
</div>